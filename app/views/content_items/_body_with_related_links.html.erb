<% content_for :simple_header, true %>

<div class="grid-row sidebar-with-body">
  <div class="column-two-thirds">
    <%= render 'govuk_component/title',
        title: @content_item.title %>
    <%= render 'govuk_component/govspeak',
        content: @content_item.body,
        direction: page_text_direction,
        disable_youtube_expansions: true,
        rich_govspeak: true %>

    <% #https://github.com/alphagov/government-frontend/pull/329#issuecomment-297681738 %>
    <% if false && @content_item.last_updated %>
      <p class="last-updated">
        <%= t 'common.last_updated' %>: <%= @content_item.last_updated %>
      </p>
    <% end %>
  </div>

  <div class="column-one-third">
    <%= render "components/navigation-sidebar", {
      curated_items: @content_item.mainstream_browse_pages + @content_item.whitehall_topics,
      non_curated_items: @content_item.policies,
      organisational_entities: @content_item.organisations_for_component
    } %>
  </div>

  <% unless universal_navigation? %>
    <% if local_assigns.has_key?(:tasklist) && show_tasklist_sidebar? %>
      <%= render 'shared/sidebar_tasklist', tasklist: tasklist %>
    <% else %>
      <%= render 'shared/related_items', content_item: @content_item %>
    <% end %>
  <% end %>
</div>
